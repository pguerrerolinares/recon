# Recon - Environment Variables
# Copy this file to .env and fill in your API keys.
# Only the keys for your chosen providers are required.

# --- LLM Provider API Keys ---
# Set the key for whichever provider you use in your plan.yaml

# OpenRouter (default) - Get key at https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Anthropic - Get key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI - Get key at https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini - Get key at https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Groq - Get key at https://console.groq.com/keys
GROQ_API_KEY=

# Kimi / Moonshot - Get key at https://platform.moonshot.ai/
KIMI_API_KEY=

# GitHub Copilot (for copilot provider)
GITHUB_TOKEN=

# Custom provider
RECON_API_KEY=
RECON_BASE_URL=

# --- Search Provider API Keys ---
# Set the key for whichever search provider you use.

# Tavily (default) - Get key at https://tavily.com/
TAVILY_API_KEY=

# Brave Search - Get key at https://brave.com/search/api/
BRAVE_API_KEY=

# Serper (Google Search) - Get key at https://serper.dev/
SERPER_API_KEY=

# Exa - Get key at https://exa.ai/
EXA_API_KEY=

# --- Optional Defaults ---
# Override default provider/model without editing plan.yaml

# RECON_PROVIDER=openrouter
# RECON_MODEL=anthropic/claude-sonnet-4
